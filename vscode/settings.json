{
  // Window settings
  "window.menuBarVisibility": "compact",
  "window.commandCenter": true,

  // Workbench
  "workbench.editor.enablePreview": false,
  // "workbench.editor.tabCloseButton": "off",
  "workbench.colorTheme": "Bearded Theme Arc",
  // "workbench.editor.showIcons": false,
  // "workbench.iconTheme": null,
  "workbench.iconTheme": "material-icon-theme",
  "workbench.tree.indent": 24,
  "workbench.tree.renderIndentGuides": "always", // "none"
  "workbench.list.smoothScrolling": true,
  "workbench.sideBar.location": "right",

  // Breadcrumbs
  "breadcrumbs.enabled": true,
  "breadcrumbs.icons": true,

  // Editor settings
  "editor.colorDecorators": true,
  "editor.cursorBlinking": "blink",
  "editor.cursorStyle": "line",
  "editor.cursorSmoothCaretAnimation": true,
  "editor.smoothScrolling": true,
  "editor.find.addExtraSpaceOnTop": false,
  // "editor.fontFamily": "'IBM Plex Mono', monospace",
  "editor.fontFamily": "JetBrains Mono, Cascadia Mono, Consolas, 'courier New', monoscape",
  "editor.fontSize": 16,
  "editor.fontWeight": "400",
  "editor.fontLigatures": true,
  "editor.lineHeight": 2,
  "editor.links": false,
  "editor.minimap.enabled": false,
  "editor.occurrencesHighlight": false,
  "editor.renderLineHighlight": "all",
  "editor.renderWhitespace": "none",
  "editor.roundedSelection": true,
  "editor.scrollbar.horizontal": "visible",
  "editor.scrollbar.vertical": "visible",
  "editor.selectionHighlight": false,
  "editor.showFoldingControls": "always",
  "editor.mouseWheelZoom": true,
  "editor.inlineSuggest.enabled": true,
  "editor.guides.indentation": false,
  // "editor.stickyScroll.enabled": true,
  // "editor.formatOnSave": true,

  // Terminal settings
  // "terminal.integrated.fontFamily": "'IBM Plex Mono', monospace",
  "terminal.integrated.fontFamily": "JetBrains Mono, Cascadia Mono, Consolas, 'courier New', monoscape",
  "terminal.integrated.fontWeight": "400",
  "terminal.integrated.fontSize": 16,
  "terminal.integrated.defaultProfile.windows": "Ubuntu (WSL)",

  // Plugin settings & others
  "powermode.enabled": false,
  "powermode.shake.enabled": false,

  // Integrations and Extensions
  // Vim
  "vim.easymotion": true,
  "vim.incsearch": true,
  "vim.useSystemClipboard": true,
  "vim.useCtrlKeys": true,
  "vim.hlsearch": true,
  // Prettier
  "prettier.requireConfig": false,
  // Git related
  "git.autofetch": true,
  "githubPullRequests.pullBranch": "never",

  // Settings per language
  "C_Cpp.clang_format_style": "{ BasedOnStyle: LLVM, IndentWidth: 4, PointerAlignment: Right, BreakBeforeBraces: Allman, AllowShortFunctionsOnASingleLine: None }",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "[html][scss][css][javascript][vue][typescript][json][jsonc][javascriptreact][typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.tabSize": 4
  },
  "[scss][css][javascript][typescript][javascriptreact]": {
    "editor.tabSize": 2
  },
  "[markdown]": {
    "editor.defaultFormatter": "DavidAnson.vscode-markdownlint"
  },
}
